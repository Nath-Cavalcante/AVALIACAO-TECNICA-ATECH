import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Leitura
        int N = sc.nextInt();
        int[] E = new int[N];
        int[] S = new int[N];
        for (int i = 0; i < N; i++) E[i] = sc.nextInt();
        for (int i = 0; i < N; i++) S[i] = sc.nextInt();

        int maximoPassageiro = 0;
        // Percorre os pontos no tempo
        for (int t = 1; t <= 1000; t++) {
            int contagemAtual = 0;           
            for (int i = 0; i < N; i++) {
                // Verifica se o passageiro i estava na sala no momento t
                if (t >= E[i] && t < S[i]) {
                    contagemAtual++;
                }
            }
            if (contagemAtual > maximoPassageiro) {
                maximoPassageiro = contagemAtual;
            }
        }
        System.out.println(maximoPassageiro);
    }
}
